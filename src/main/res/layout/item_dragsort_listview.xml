<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dragsort_listview_item_create_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/add_person_icon" />

        <TextView
            android:id="@+id/dragsort_listview_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:layout_toRightOf="@id/dragsort_listview_item_create_btn"

            android:lineSpacingExtra="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="70dp"
            android:text=""
            android:textColor="#696969"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dragsort_listview_item_prepare_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:background="@drawable/button_colorgreen_style"
            android:text="准备"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dragsort_listview_item_call_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:background="@drawable/button_colororange_style"
            android:text="叫人"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dragsort_listview_item_confirm_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:background="@drawable/button_colorred_style"
            android:text="到齐"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dragsort_listview_agenda_status_closed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/agenda_closed_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="#d81e06" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dragsort_listview_agenda_status_progress_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dragsort_listview_item_layout"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/agenda_in_progress_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:textColor="#4bca7d" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dragsort_listview_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/planandform_hui"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/style_divider_color" />

    </RelativeLayout>

    <!--<com.elink.view.LeftListView
        android:id="@+id/dragsort_item_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:divider="#66CCCCCC"
        android:dividerHeight="0.5dp"
        android:scrollbars="none"></com.elink.view.LeftListView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_deagsort_line_linearlayout"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/style_divider_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_line_rela"
                        android:layout_width="25dp"
                        android:layout_height="2px"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/style_divider_color" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_dragsort_person_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/view_line_rela"
                android:text="参会人员："
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dragsort_item_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line"
                android:divider="#FFFFFF" />

        </LinearLayout>

        <!--android:layout_marginLeft="75dp"-->
        <View
            android:id="@+id/view_line_software"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/item_recyclerview_line_software_shape"
            android:layerType="software" />

    </LinearLayout>

</LinearLayout>