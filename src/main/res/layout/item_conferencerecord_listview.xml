<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="15dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/conferencerecord_item_linear"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:background="@color/meetingrecord_green"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/clock_icon"/>

            <TextView
                android:id="@+id/meetingrecord_item_meeting_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-10-16 15:33:25"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/conferencerecord_item_linear"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/record_listview_item_person_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lines="1"
                android:text="哦哦"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/meetingrecord_item_meeting_status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>